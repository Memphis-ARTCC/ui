{
    "extends": [
        "next/core-web-vitals",
        "next/typescript",
        "plugin:tailwindcss/recommended"
    ],
    "plugins": [
        "perfectionist"
    ],
    "rules": {
        "indent": [
            "error",
            4
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ],
        "perfectionist/sort-imports": [
            "error",
            {
                "type": "natural",
                "order": "asc"
            }
        ],
        "tailwindcss/no-custom-classname": "off"
    }
}